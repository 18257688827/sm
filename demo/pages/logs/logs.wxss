.search-top {
    display: flex;
    flex-wrap: wrap;
}
.search{
    display: flex;
    height: 50rpx;
    width: 520rpx;
    margin: 20rpx;
    border: 1rpx solid #ffcc00;
    border-radius: 50rpx;

}
.search .search-img{
    display: flex;
    margin-top: 10rpx;
    margin-left: 30rpx;
    color: #ccc;
}
.search input{
    margin-left: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
}
.btn{
    background-color: #fff;
    line-height: 47rpx;
    font-size: 30rpx;
    height: 50rpx;
    margin-top: 20rpx;
    margin-left: -10rpx;
    border: 1rpx solid #ffcc00;
}
.xximg{
    margin-top: 8rpx;
    margin-left: 130rpx;
}
.search-top image{
    width: 50rpx;
    height: 36rpx;
    margin-top: 24rpx;
    margin-right: 20rpx;
}

/* 轮播 */
swiper {
    display: flex;
    justify-content: center;
    text-align: center;
}
swiper-item image{
    width: 700rpx;
    height: 290rpx;
    border-radius: 10rpx;
}

/* 分类 */
.grids{
    display: flex;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    margin-left: 60rpx;
}
.grids .item{
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    width: 20%;
    height: 110rpx;

}
.grids .item image{
    width: 65rpx;

}
.grids .item text{
    font-size: 24rpx;
    margin-top: 15rpx;
    white-space:nowrap;
    margin-left: -63rpx;
}

/* 热销 */
.links{
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
    background-color: #e6e6e6;
    
}
.links .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 48%;
    height: 420rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin: 5rpx;
    box-sizing: border-box;
}
.links .item image{
    width: 300rpx;
    height: 240rpx;
}
.links .item .item.sc{
    width: 100%;
    height: 180rpx;

}
.links .item .item.sc text{
    width: 100%;
    text-align: center;
    font-size: 24rpx;
}
.links .item .item.sc .danjia{
    background-color: #ffcc00;
    width: 100%;
    height: 75rpx;
}
.links .item .item.sc .danjia text{
    margin-top: 10rpx;
    width: 50%;
    font-size: 20rpx;
}
.danjia_left{
    float: left;
    box-sizing: border-box;
    border-right: 1rpx solid #fff;
}
.danjia_right{
    float: right;
}
.links .item .item.sc .shoucang{
    width: 160rpx;
    height: 40rpx;
    margin-top: 6rpx;
    background-color: #787878;
    border-radius: 7rpx;
    color: #fff;
    font-size: 26rpx;
}
/* 弹出框 */
.shadow-layer{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .3);
    /* position:fixed; */
    top:0;
    left: 0;
    z-index:999;
}
.links .item .item.sc .shadow-layer .danjia_left,
.links .item .item.sc .shadow-layer .danjia_right{
    width: 220rpx;
    height: 100rpx;
    background-color: #c5c5c5;
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-top: 55rpx;
    display: flex;
    align-items: left;
    justify-content: space-around;
    flex-direction: column;
}
.links .item .item.sc .shadow-layer .danjia_right{
    margin-right: 20rpx;
}
.links .item .item.sc .shadow-layer .danjia_left:hover,
.links .item .item.sc .shadow-layer .danjia_right:hover{
    background-color: #ffcc00;
}




