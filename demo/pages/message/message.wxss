.message{
    display: flex;
    flex-wrap: wrap;
}
.message .message-item{
    display: flex;
    justify-content: center;
    width: 100%;
    height: 150rpx;
    border-bottom: 3rpx solid #ccc;
}
.message .message-item image{
    width: 150rpx;
    height: 150rpx;
}
.message-item text{
    margin-top: 30rpx;
    
}
.message .message-item .right{
    margin-left: 30rpx;
}
.min{
    font-size: 24rpx;
}
.end{
    width: 100%;
    height: 65rpx;
    line-height:65rpx;
    background-color: #ffcc00;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    font-weight: 800;
    position:fixed;
    bottom:0
}
/* 弹出框 */
.shadow-end{
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .3);
    position:fixed;
    top:0;
    left: 0;
    z-index:999;
}
.sales{
    height:500rpx;
    width:500rpx;
    background:#fff;
    border-radius:10rpx;
    position:absolute;
    top:25%;
    left:15%;
}
.sales_top{
    display: flex;
    text-align: center;
    justify-content: center;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #ffcc00;
    color: #fff;

}
.sales image{
    width: 200rpx;
    height: 200rpx;
    background-color: #eee;
    border-radius: 100%;
    position: absolute;
    top: 30%;
    left: 30%;
}
.sales_ok{
    height:50rpx;
    width:200rpx;
    line-height:50rpx;
    background-color:#646464;
    color:#fff;
    border-radius:10rpx;
    /* dispaly:flex; */
    text-align: center;
    position:absolute;
    bottom:10%;
    left:30%; 
}


/* user */
.shadow-user{
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 1);
    position:fixed;
    top:0;
    left: 0;
    z-index: 99999;
}
.max{
    position: absolute;
    width: 505rpx;
    padding-left: 130rpx;
    padding-right: 130rpx;
    z-index: -9999;
    }
input{
    display: block;
    height: 140rpx;
    border-bottom: 3rpx solid #ccc;
    color: #000;
}
.camera{
    position: relative;
    height: 340rpx;
    margin-top: 80rpx;
    border: 4rpx solid #ccc;
}
.camera image{
    position: absolute;
    top: 20%;
    left: 35%;
    display: block;
    width: 160rpx;
    height: 100rpx;
    border-radius: 0;
    background-color: #fff;
}
.max .camera text{
    position: absolute;
    top: 55%;
    left: 30%;
    color: #ccc;
    align-items: center;
    text-align: flex-start;
}
.sales_email{
    margin-top: 50rpx;
    width: 100%;
    height: 65rpx;
    line-height:65rpx;
    background-color: #ffcc00;
    text-align: center;
    color: #fff;
    font-size: 30rpx;
    font-weight: 800;
    position:fixed;
    bottom:0
}
.sales_email:hove .ipt{
    text-indent:-9999px;
    color: #fff;
}

/* email */
.shadow-email{
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 1);
    position:fixed;
    top:0;
    left: 0;
    z-index:9999;
}
.shadow-email .email{
    width: 100%;
    height: 100%;
    background-color:#ffcc00;
    z-index:9999;
}
.shadow-email .email .email_top{
    display: inline-block;
    font-size: 100rpx;
    margin-top: 5%;
}
.shadow-email .email image{
    position: absolute;
    top: 15%;
    left: 40%;
    width: 250rpx;
    background-color: rgba(0, 0, 0, 0);
    border-radius: 0;
}
.shadow-email .email .eamil_bottom{
    display: inline-block;
    font-size: 50rpx;
    margin-top: 35%;
}
.shadow-email .wxewm{
    position: absolute;
    top: 50%;
    left: 0;
    width: 100%;
    height: 54%;
    border-radius: 50rpx 50rpx 0 0;
    z-index: 999999;
}