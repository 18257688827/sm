/* 热销 */
.links{
    display: flex;
    flex-wrap: wrap;
    padding: 20rpx;
    background-color: #e6e6e6;
    z-index: 1;
}
.links .item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 48%;
    height: 420rpx;
    background-color: #fff;
    border-radius: 10rpx;
    margin: 5rpx;
    box-sizing: border-box;
}
.links .item image{
    width: 300rpx;
    height: 240rpx;
}
.links .item .item.sc{
    width: 100%;
    height: 180rpx;

}
.links .item .item.sc text{
    width: 100%;
    text-align: center;
    font-size: 24rpx;
}
.links .item .item.sc .danjia{
    background-color: #ffcc00;
    width: 100%;
    height: 75rpx;
}
.links .item .item.sc .danjia text{
    margin-top: 10rpx;
    width: 50%;
    font-size: 20rpx;
}
.danjia_left{
    float: left;
    box-sizing: border-box;
    border-right: 1rpx solid #fff;
}
.danjia_right{
    float: right;
}
.links .item .item.sc .shoucang{
    width: 160rpx;
    height: 40rpx;
    margin-top: 6rpx;
    background-color: #787878;
    border-radius: 7rpx;
    color: #fff;
    font-size: 26rpx;
}
.sales_fenlei{
  position: fixed;
}
.sales_fenlei image{
  display: absolute;

}

.links .item .item.sc .shadow-layer .danjia_left,
.links .item .item.sc .shadow-layer .danjia_right{
    width: 220rpx;
    height: 100rpx;
    background-color: #c5c5c5;
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-top: 55rpx;
    display: flex;
    align-items: left;
    justify-content: space-around;
    flex-direction: column;
}
.links .item .item.sc .shadow-layer .danjia_right{
    margin-right: 20rpx;
}



.links .item .item.sc .shadow-layer .danjia_left:hover,
.links .item .item.sc .shadow-layer .danjia_right:hover{
    background-color: #ffcc00;
}